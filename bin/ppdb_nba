#!/usr/bin/env python
import argparse
import logging
from ppdb_nba import *

def main():
    parser = argparse.ArgumentParser(usage='ppdb_nba - Preprocessing data to create incremental updates or posting it directly to elastic search')
    parser.add_argument('--source', help='Name of the data source')
    parser.add_argument('files', help='One or more json data files', nargs='+', default=[])
    args = parser.parse_args()

    print("source={source}", args.source)
    for file in args.files :
        print(file)

if __name__ == "__main__":
    main()