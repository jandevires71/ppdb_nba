#!/usr/bin/env python
import argparse
import logging
from ppdb_nba import *

def main():
    parser = argparse.ArgumentParser(usage='ppdb_nba --source sourcename /path/file1 /path/file2 ...'
                                           '\n\nPreprocessing data to create incremental updates or posting it directly'
                                           '\nto elastic search')

    parser.add_argument('--source', help='Name of the data source', nargs=1)
    parser.add_argument('files', help='One or more json data files', nargs='+', default=[])
    args = parser.parse_args()

    srcconfig = cfg.get('sources').get(source, False)
    if not srcconfig:
        print('Bron "{source}" bestaat niet kies een van de bestaande bronnen'.format(source=source))
        sources = cfg.get('sources', None)
        if (sources) :
            print(", ".join(sources))
        exit(2)

    for file in args.files :
        print(file)

if __name__ == "__main__":
    main()